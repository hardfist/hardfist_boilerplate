{
  "name": "hardfist_boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:hardfist/hardfist_boilerplate.git",
  "author": "hardfist <1562502418@qq.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "clean": "lerna run --stream clean",
    "build": "CI=false lerna run --stream  build",
    "test": "node scripts/test.js",
    "bump": "lerna version",
    "release": "lerna publish from-package",
    "release:next": "lerna publish --bump=prerelease",
    "release:canary": "lerna publish --canary --yes",
    "lerna-prepare": "lerna run build",
    "bootstrap": "yarn lerna-prepare",
    "prebootstrap": "yarn"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/ui/",
      "**/ui/**"
    ]
  },
  "lint-staged": {
    "**/*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "**/*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "CI=true yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@microsoft/api-extractor": "^7.5.0",
    "@types/fs-extra": "^8.0.0",
    "brotli": "^1.3.2",
    "chalk": "^2.4.2",
    "codecov.io": "^0.1.6",
    "danger-plugin-jest": "^1.3.0",
    "danger-plugin-yarn": "^1.3.2",
    "dangerfile": "^0.2.1",
    "eslint-plugin-import": "^2.18.2",
    "execa": "^2.0.5",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.7",
    "lerna": "^3.13.1",
    "lint-staged": "^9.4.0",
    "minimist": "^1.2.0",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2"
  }
}
